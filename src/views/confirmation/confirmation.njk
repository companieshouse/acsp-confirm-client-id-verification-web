{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% extends "layouts/default.njk" %}

{% block backLink %}
  {# Remove back button on this page by replacing it with nothing #}
{% endblock %}

{% set title = i18n.identityTitle %}

{% block main_content %}
  {{ govukPanel({
    titleText: i18n.identityTitle
  }) }}

  <p class="govuk-body">{{ i18n.yourRef }}</p>
  <p class="govuk-body">{{ i18n.emailConfirmation }} <strong>{{ email }}</strong>.</p>

  <h2 class="govuk-heading-m">{{ i18n.whatHappens }}</h2>
  <p class="govuk-body">{{ i18n.weWillEmailed }}</p>

  <button type="submit" class="govuk-button govuk-button--secondary govuk-!-margin-bottom-2" data-module="govuk-button">
    Print this page
  </button>

  <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

  <h2 class="govuk-heading-m">{{ i18n.personDetails }}</h2>
  {{ govukSummaryList({
    rows: [
      {
        key: {
          text: i18n.name
        },
        value: {
          text: clientData.firstName + " " + clientData.lastName
        }
      },
      {
        key: {
          text: i18n.emailAddress
        },
        value: {
          text: detailsAnswers.companyNumber
        }
      },
      {
        key: {
          text: i18n.dob
        },
        value: {
          text: clientData.dateOfBirth
        }
      },
      {
        key: {
          text: i18n.homeAdd
        },
        value: {
          text: detailsAnswers.roleType
        }
      },
      {
        key: {
          text: i18n.dateIdentityCompleted
        },
        value: {
          html: detailsAnswers.businessAddress
        }
      },
      {
        key: {
          text: i18n.optionUsed
        },
        value: {
          html: detailsAnswers.correspondenceAddress
        }
      },
      {
        key: {
          text: i18n.identityDoc
        },
        value: {
          html: detailsAnswers.workSector
        }
      },
      {
        key: {
          text: i18n.identityVerification
        },
        value: {
          html: detailsAnswers.correspondenceAddress
        }
      }
    ]
  }) }}
{% endblock %}
