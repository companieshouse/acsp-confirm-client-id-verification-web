 {% from "govuk/components/select/macro.njk" import govukSelect %}

<noscript>
  {% set DROPDOWN = [
      { value: '', text: dropdownDefaultText }
    ] %}

  {% set dropdownArray = countryList.split(";") %}

  {% if not dropdownNumber %}
    {% set dropdownNumber = "0" %}
  {% endif %}

  {% if not inputClass %}
    {% set inputClass = "govuk-input--width-10"%}
  {% endif %}

    {% if not dropdownValue %}
  {% set dropdownValue = payload.countryInput_1 %}
  {% endif %}

  {% for i in dropdownArray %}
    {% set dropdownObject = { value: i, text: i, selected: dropdownValue === i } %}
    {% set DROPDOWN = DROPDOWN.concat(dropdownObject) %}
  {% endfor %}



  {{ govukSelect({
      errorMessage: errorMessage.text,
      label: {
        html: dropdownTitle
      },
      id: "countryInput_1",
      name: "countryInput_1",
      value: dropdownValue,
      classes: inputClass,
      hint: {
        text: dropdownHint
      },
      items: DROPDOWN
    }) }}
</noscript>