{% extends "layouts/default.njk" %}
{% set title = i18n.startPageTitle %}

{% block backLink %}
  {# Remove back button on this page by replacing it with nothing #}
{% endblock %}

{% block main_content %}
  <form action="" method="POST">
    <h1 class="govuk-heading-l">{{ i18n.startPageTitle }}</h1>
    <p class="govuk-body">{{ i18n.useThisService }}</p>
    
    <h2 class="govuk-heading-m">{{ i18n.whatYoullNeedHeading }}</h2>
    <p class="govuk-body">{{ i18n.youllNeed }}</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>{{ i18n.fullName }}</li>
      <li>{{ i18n.dob }}</li>
      <li>{{ i18n.homeAddress }}</li>
      <li>{{ i18n.emailAddress }}</li>
    </ul>

    <h2 class="govuk-heading-m">{{ i18n.whatYoullNeedIdentityHeading }}</h2>
    
      <p class="govuk-body">
        {{ i18n.youMustHave }}
        <a href="guidance">{{ i18n.companiesHouseIdentity }}</a>
        {{ i18n.outLines }}
      </p>

      <ul class="govuk-list govuk-list--bullet">
      <li>{{ i18n.option1or2 }}</li>
      <li>{{ i18n.documentChecked }}</li>
      <li>{{ i18n.checksDate }}</li>
    </ul>
    
    <p class="govuk-body">{{ i18n.startTimeout }}</p>
    
    <button class="govuk-button govuk-button--start" data-module="govuk-button" data-event-id="START NOW">
      {{ i18n.startNow }}
      <svg
        class="govuk-button__start-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="17.5"
        height="19"
        viewBox="0 0 33 40"
        aria-hidden="true"
        focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
      </svg>
    </button>
    
    <p>
      <a href="guidance-ACSPs" data-event-id="Read the guidance">{{ i18n.readThe }}</a>.
    </p>
  </form>
{% endblock %}