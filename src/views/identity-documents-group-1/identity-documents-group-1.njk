{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% extends "layouts/default.njk" %}

{% if reqType !== "reverify" %}
  {% set title = i18n.identityDocumentsIDVTitle %}
  {% set pageHeader = i18n.identityDocumentsIDVTitle %}
{% else %}
  {% set title = i18n.reverifyIdentityDocumentsIDVTitle %}
  {% set pageHeader = i18n.reverifyIdentityDocumentsIDVTitle %}
{% endif %}

{% block main_content %}
    <form action="{{ currentUrl }}?lang={{ lang }}" method="POST">
        {% include "partials/csrf_token.njk" %}
        {% include "partials/user_name.njk" %} 
        {{ govukCheckboxes({
            name: "documentsGroup1",
            fieldset: {
                legend: {
                    text: pageHeader,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            hint: {
                text: i18n.identityDocumentsIDVHint
            },
            values: payload.documentsGroup1,
            items: [
            {
                value: "biometric_passport",
                text: i18n.biometric_passport,
                id: "biometric-passport"
            },
            {
                value: "irish_passport_card",
                text: i18n.irish_passport_card,
                id: "irish-passport"
            },
            {
                value: "UK_or_EU_driving_licence",
                text: i18n.UK_or_EU_driving_licence,
                id: "uk-drivers-licence"
            },
            {
                value: "EEA_identity_card",
                text: i18n.EEA_identity_card,
                id: "identity-card"
            },
            {
                value: "UK_biometric_residence_permit",
                text: i18n.UK_biometric_residence_permit,
                id: "uk-biometric-residence-permit"
            },
            {
                value: "UK_biometric_residence_card",
                text: i18n.UK_biometric_residence_card,
                id: "uk-biometric-residence-card"
            },
            {
                value: "UK_frontier_worker_permit",
                text: i18n.UK_frontier_worker_permit,
                id: "uk-frontier-worker-permit"
            }
            ]
        }) }}
        {{ govukButton({
            text: i18n.Continue,
            id: "continue-button"
        }) }}
    </form>


    
{% endblock main_content %}