        {{ govukCheckboxes({
            name: "documentsGroup2B",
            fieldset: {
                legend: {
                    text: i18n.textGroupB,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--m"
                }
            },
            
            values: payload["documentsGroup2B"],
            items: [
            {
                value: "birthCert",
                text: i18n.birthCert,
