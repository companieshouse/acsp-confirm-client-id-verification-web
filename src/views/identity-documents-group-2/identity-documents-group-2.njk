            name: "documentsGroup2A",
            fieldset: {
                legend: {
                    isPageHeading: false,
                    html: "<h2 class='govuk-heading-m'>"+i18n.textGroupA+"</h2>"
                }
            },

            values: payload["documentsGroup2A"],
            items: [
            {
                value: "passport",
                text: i18n.passport,
                id: "passport"
            },
            {
                value: "irish_passport_card",
                text: i18n.irish_passport_card,
                id: "irish-passport-card"
            },
            {
                value: "EEA_identity_card",
                text: i18n.EEA_identity_card,
                id: "identity-card"
            },
            {
                value: "UK_biometric_residence_permit",
                text: i18n.UK_biometric_residence_permit,
                id: "uk-biometric-residence-permit"
