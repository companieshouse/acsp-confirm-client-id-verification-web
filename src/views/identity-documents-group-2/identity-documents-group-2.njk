            name: "documentsGroup2A",
            fieldset: {
                legend: {
                    text: i18n.textGroupA,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--m"
                }
            },

            values: payload["documentsGroup2A"],
            items: [
            {
                value: "passport",
                text: i18n.passport,
                id: "passport"
            },
            {
                value: "irish_passport_card",
                text: i18n.IrishCard,
                id: "irish-passport-card"
            },
            {
                value: "EEA_identity_card",
                text: i18n.identityCard,
                id: "identity-card"
            },
            {
                value: "UK_biometric_residence_permit",
                text: i18n.ukBRP,
                id: "uk-biometric-residence-permit"
            },
            {
                value: "UK_biometric_residence_card",
                text: i18n.ukBRC,
                id: "uk-biometric-residence-card"
            },
            {
                value: "UK_PASS_card",
                text: i18n.passCard,
                id: "uk-accredited-pass-card"
            },
            {
                value: "UK_or_EU_digital_tachograph_card",
                text: i18n.ukEuDigitalCard,
                id: "uk-eu-driver-digital-tacograph-card"
            },
            {
                value: "UK_or_EU_driving_licence",
                text: i18n.fullDrivingLicense,
                id: "uk-drivers-licence"
            },
            {
                value: "UK_HM_forces_card",
                text: i18n.ukForceCard,
                id: "uk-forces-id-card"
            },
            {
                value: "UK_HM_veteran_card",
                text: i18n.ukArmedForceCard,
                id: "uk-armed-forces-veteran-card"
            },
            {
                value: "UK_frontier_worker_permit",
                text: i18n.ukFrontierPermit,
                id: "uk-frontier-worker-permit"
