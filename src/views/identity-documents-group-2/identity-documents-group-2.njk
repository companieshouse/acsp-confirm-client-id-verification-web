                id: "utility-bill",
                attributes: {
                    "data-event-id": "Utility bill (for the person's current address)"
                }
            }
            ]
        }) }}
        {{ govukButton({
            text: i18n.Continue,
            id: "continue-button",
            attributes: {
                "data-event-id": "Continue-DC2"
            }
        }) }}
    </form>

