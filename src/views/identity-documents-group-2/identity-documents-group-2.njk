            {
                value: "work_permit_photo_id",
                text: i18n.photoWorkPermit,
                id: "photo-work-permit"
            },
            {
                value: "immigration_document_photo_id",
                text: i18n.photoimmigrationDoc,
                id: "photo-immigration-doc"
            },
            {
                value: "visa_photo_id",
                text: i18n.photoVisa,
                id: "photo-visa"
            },
            {
