                id: "uk-firearms-licence"
            },
            {
                value: "PRADO_supported_photo_id",
                text: i18n.photoIdPrado,
                id: "photo-id-prado",
                hint: {
                        text: i18n.photoIdPradoHint
                }
            }
            ]
        }) }}

        {{ govukCheckboxes({
            name: "documentsGroup2B",
            fieldset: {
                legend: {
                    text: i18n.textGroupB,
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--m"
                }
            },
            
            values: payload["documentsGroup2B"],
            items: [
            {
                value: "birth_certificate",
                text: i18n.birthCert,
                id: "birth-cert"
            },
            {
                value: "marriage_certificate",
                text: i18n.marriageCert,
                id: "marriage-cert"
