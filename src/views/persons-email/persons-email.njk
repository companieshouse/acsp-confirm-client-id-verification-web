{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% extends "layouts/default.njk" %}

{% set title = i18n.emailAddressTitle %}

{% block main_content %}
    <form action="{{ currentUrl }}?lang={{ lang }}" method="POST">
        {% include "partials/csrf_token.njk" %}
        <h1 class="govuk-heading-l">{{ i18n.emailAddressTitle }}</h1>
        <p class="govuk-body">{{ i18n.emailAddressCanOnlyUsedOnce | replace("{NAME}", firstName + " " + lastName) }}</p>
        <div class="govuk-form-group">
            {{ govukInput({
                label: {
                    text: i18n.enterEmailAddress | replace("{NAME}", firstName + " " + lastName),
                    classes: "govuk-label--s"
                },
                errorMessage: {
                    text: errors["email-address"].text
                } if errors["email-address"] | length,
                classes: "govuk-input",
                id: "email-address",
                name: "email-address",
                autocomplete: "email",
                value: payload["email-address"]
            }) }}

            {{ govukInsetText({
                text: i18n.correctEmailInsetText
            }) }}
        </div>
        {{ govukButton({
            text: i18n.Continue,
            id: "continue-button"
        })}}
    </form>
{% endblock main_content %}